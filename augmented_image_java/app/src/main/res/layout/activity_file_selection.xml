<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_item_edit_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <Button
        android:id="@+id/choose_image_file"
        android:layout_width="222dp"
        android:layout_height="0dp"
        android:layout_marginBottom="52dp"
        android:background="@drawable/round_button"
        android:backgroundTint="#36706E68"
        android:fontFamily="sans-serif-light"
        android:text="@string/choose_image_file"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/choose_xml_file"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/choose_xml_file"
        android:layout_width="227dp"
        android:layout_height="0dp"
        android:layout_marginBottom="201dp"
        android:background="@drawable/round_button"
        android:backgroundTint="#36706E68"
        android:fontFamily="sans-serif-light"
        android:text="@string/choose_xml_file"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/continue_to_ar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choose_image_file" />

    <Button
        android:id="@+id/continue_to_ar"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_marginBottom="187dp"
        android:background="@drawable/round_button"
        android:backgroundTint="#FFC107"
        android:fontFamily="sans-serif-light"
        android:text="@string/continue_to_ar"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choose_xml_file" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="338dp"
        android:layout_height="173dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="52dp"
        app:layout_constraintBottom_toTopOf="@+id/choose_image_file"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/chatpcb" />


</androidx.constraintlayout.widget.ConstraintLayout>