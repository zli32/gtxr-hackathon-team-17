<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_item_edit_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <Button
        android:id="@+id/choose_image_file"
        android:layout_width="222dp"
        android:layout_height="49dp"
        android:background="@drawable/round_button"
        android:backgroundTint="#36706E68"
        android:fontFamily="sans-serif-light"
        android:text="@string/choose_image_file"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="263dp" />

    <Button
        android:id="@+id/choose_xml_file"
        android:layout_width="227dp"
        android:layout_height="49dp"
        android:background="@drawable/round_button"
        android:backgroundTint="#36706E68"
        android:text="@string/choose_xml_file"
        android:textSize="20sp"
        android:fontFamily="sans-serif-light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="364dp" />

    <Button
        android:id="@+id/continue_to_ar"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:backgroundTint="#FFC107"
        android:background="@drawable/round_button"
        android:text="@string/continue_to_ar"
        android:textSize="20sp"
        android:fontFamily="sans-serif-light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="614dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/chatpcb"
        tools:layout_editor_absoluteY="-224dp" />


</androidx.constraintlayout.widget.ConstraintLayout>